    </div>
  </div>
  {{/if}}

  {{#if ride}}
  <div class="hideCategory row" id="ride">
    <div class="col s12">
      <div class="carousel">
        {{#each ride}}
        {{>list/list}}
        {{/each}}
      </div>
    </div>
  </div>
  {{/if}}

  {{#if run}}
  <div class="hideCategory row" id="run">
    <div class="col s12">
      <div class="carousel">
        {{#each run}}
        {{>list/list}}
        {{/each}}
      </div>
    </div>
  </div>
  {{/if}}

  {{#if swim}}
  <div class="hideCategory row" id="swim">
    <div class="col s12">
      <div class="carousel">
        {{#each swim}}
        {{>list/list}}
